@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="container d-flex justify-content-center mt-0">
        <div class="w-50">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Mobile, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Mobile, new { placeholder = "Mobile", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.DateOfBirth, new { @type = "date", placeholder = "dd / mm / yyyy", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Address, new { placeholder = "Address", @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.City, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Country, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Country, new SelectList(new[] { "Select Country", "USA", "UK", "India", "Canada" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Register</button>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })
        </div>
    </div>
}
